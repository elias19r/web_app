<h2>Forgot your password?</h2>

<%= render(Users::ErrorMessagesComponent.new(resource: resource)) %>

<%= form_with(model: resource, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
