<% if flash.any? %>
  <div>
    <% flash.each do |key, value| %>
      <% case value %>
      <% when Hash %>
        <%=
          alert_kwargs = {
            type:        key,
            subject:     value[:subject],
            dismissible: value[:dismissible],
            attrs:       value[:attrs]
          }.compact

          alert_content = value[:content]
          alert_button_link = value[:button_link] || {}

          render(AlertComponent.new(**alert_kwargs)) do |c|
            c.button_link(href: alert_button_link[:href]) { alert_button_link[:content] }

            alert_content
          end
        %>
      <% else %>
        <%= render(AlertComponent.new(type: key)) { value } %>
      <% end %>
    <% end %>
  </div>
<% end %>
